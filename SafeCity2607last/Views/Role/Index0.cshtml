@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<h1 class="bg-info text-white">All Roles</h1>
<a asp-action="Create" class="btn btn-secondary">Create a new role</a>


<table class="table table-striped table-bordered">
    <thead>
        <tr>
            @*<td>Id</td>*@
            <td>Name</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                @*<td>@role.Id</td>*@
                <td>@role.Name</td>

                @*<td><a class="btn btn-sm btn-primary" asp-action="List" asp-route-id="@role.Id">Lister</a></td>*@
                @*<td><a class="btn btn-sm" asp-action="Update" asp-route-id="@role.Id"><img src="~/images/edit.png" /></a></td>*@
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <button type="submit" class="btn btn-sm ">
                            <img src="~/img/poubelle.png" height="20" width="20"/>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

